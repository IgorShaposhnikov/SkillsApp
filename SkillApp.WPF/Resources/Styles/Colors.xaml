<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  General  -->
    <Color x:Key="BrandColor">#7C45F6</Color>
    <SolidColorBrush x:Key="BrandColorSolidBrush" Color="{DynamicResource BrandColor}" />

    <Color x:Key="PrimaryColor">#fff</Color>
    <SolidColorBrush x:Key="PrimarySolidColorBrush" Color="{DynamicResource PrimaryColor}" />

    <Color x:Key="SecondaryColor">#e4e5f1</Color>
    <SolidColorBrush x:Key="SecondarySolidColorBrush" Color="{DynamicResource SecondaryColor}" />

    <Color x:Key="SeparateColor">#d2d3db</Color>
    <SolidColorBrush x:Key="SeparateSolidColorBrush" Color="{DynamicResource SeparateColor}" />

    <!--  Table  -->

    <Color x:Key="DataGridColumnHeader">#edf2f6</Color>
    <SolidColorBrush x:Key="SolidColorBrushDataGridColumnHeader" Color="{DynamicResource DataGridColumnHeader}" />

    <Color x:Key="DataGridBorderColor">#cbd5df</Color>
    <SolidColorBrush x:Key="SolidColorBrushDataGridBorderColor" Color="{DynamicResource DataGridBorderColor}" />

    <!--  Other  -->
</ResourceDictionary>