<Window
    x:Class="SkillApp.WPF.Views.Windows.LoadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SkillApp.WPF.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SkillApp"
    Width="400"
    Height="450"
    mc:Ignorable="d">
    <Border Padding="16">
        <StackPanel>
            <TextBlock
                Margin="0,32,0,0"
                HorizontalAlignment="Center"
                FontSize="32"
                FontWeight="Medium"
                Text="SkillApp" />

            <!--  Content="Новый проект"  -->
            <Button
                Height="32"
                Margin="0,64,0,0"
                Click="NewProject_Click"
                Content="Новый Профиль навыков" />

            <!--  Content="Открыть проект"  -->
            <Button
                Height="32"
                Margin="0,8,0,0"
                Click="LoadProject_Click"
                Content="Загрузить Профиль Навыков" />
        </StackPanel>
    </Border>
</Window>
